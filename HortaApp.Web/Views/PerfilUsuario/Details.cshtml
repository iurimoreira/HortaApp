<body>
    <header class="header header-interno w-clearfix">
        <img class="image" src="@Url.Content("~/Content/Imagens/logo-homegrown-branco.svg")" width="160">
        @Html.Partial("~/Views/Shared/_HeaderPartial.cshtml")
        <!--
