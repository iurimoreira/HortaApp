    </header>
    <main class="main">
        <div class="perfil-wrapper w-row">
            <div class="coluna-perfil w-col w-col-4">
                <div class="box-branco box-perfil">
                    <div class="post-info-autor w-row">
                        <div class="coluna-info-autor w-col w-col-4">
                            <div class="img-post-autor-wrapper">
                                <img src="@Html.DisplayFor(model => model.FotoPerfil)">
                            </div>
                        </div>
                        <div class="coluna-info-autor w-col w-col-8">
                            <div class="post-nome-autor">@Html.DisplayFor(model => model.NomeUsuario)</div>
                            @if (Model.Usuarioid == ViewBag.SessionId)
                            {
                                <div class="link-perfil-autor-post">
                                    @Html.ActionLink("Editar", "Edit", new { id = Model.Usuarioid })
                                </div>
                                <div class="link-perfil-autor-post">
                                    @Html.ActionLink("Alterar sua senha", "ChangePassword", "Manage")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="coluna-perfil w-col w-col-8">
                <h1 class="h2">posts desse usuário</h1>
                <div class="lista-posts" data-ix="aparecer-posts">
                    @foreach (var postagem in ViewBag.listaPostagens)
                    {
                        <div class="box-branco box-post box-post-perfil">
                            <div class="post-info-autor w-row">
                                <div class="coluna-info-autor w-col w-col-2">
                                    <div class="img-post-autor-wrapper">
                                        @if (postagem.FotoAutorPostagem != "Sem imagem")
                                        {
                                            <img src="@postagem.FotoAutorPostagem" />
                                        }
                                    </div>
                                </div>
                                <div class="coluna-info-autor w-clearfix w-col w-col-10">
                                    <div class="post-nome-autor">@postagem.AutorPostagem</div>
                                    <!--<div class="link-perfil-autor-post">ver perfil</div><img class="bt-curtiu" src="images/icon-curtiu.svg">-->
                                </div>
                            </div>
                            <p class="post-paragraph">@postagem.Conteudo</p>
                            @if (postagem.FotoPostagem != "Sem imagem")
                            {
                                <div class="img-post-wrapper">
                                    <img class="img-post" sizes="(max-width: 479px) 100vw, (max-width: 991px) 588px, 59vw" src="@postagem.FotoPostagem">
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js" type="text/javascript"></script>
